<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
>

    <View
        android:id="@+id/box1"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:background="#393939" />

    <View
        android:id="@+id/box2"
        android:layout_width="375dp"
        android:layout_height="343dp"
        android:layout_below="@id/box1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="#393939" />

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="164dp"
        android:layout_height="164dp"
        android:layout_alignTop="@id/box1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/img_22" />

    <TextView
        android:id="@+id/yourName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/box1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp"
        android:text="Your Name"
        android:textColor="#419DDF"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/connectedAccounts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/box1"
        android:layout_alignStart="@id/box1"
        android:layout_marginStart="17dp"
        android:layout_marginTop="37dp"
        android:text="Connected Accounts"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <View
        android:id="@+id/divider1"
        android:layout_width="341dp"
        android:layout_height="1dp"
        android:layout_below="@id/connectedAccounts"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="#FFFFFF" />

    <TextView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider1"
        android:layout_alignStart="@id/divider1"
        android:layout_marginStart="17dp"
        android:layout_marginTop="36dp"
        android:text="Settings"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <View
        android:id="@+id/divider2"
        android:layout_width="341dp"
        android:layout_height="1dp"
        android:layout_below="@id/settings"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="#FFFFFF" />

    <TextView
        android:id="@+id/help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider2"
        android:layout_alignStart="@id/divider2"
        android:layout_marginStart="17dp"
        android:layout_marginTop="37dp"
        android:text="Help"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <View
        android:id="@+id/divider3"
        android:layout_width="341dp"
        android:layout_height="1dp"
        android:layout_below="@id/help"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="#FFFFFF" />

    <ImageView
        android:id="@+id/image1"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@id/box1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/img_23" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/image1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/img_24" />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="38dp"
        android:layout_height="35dp"
        android:layout_below="@id/divider2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/img_25" />

    <include
        android:id="@+id/group1"
        layout="@layout/group1"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        />

</RelativeLayout>
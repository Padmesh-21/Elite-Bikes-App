<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:padding="0dp"
    android:clipToOutline="true">

    <ImageView
        android:id="@+id/arrow_ios_back5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/arrowiosback6" />

    <LinearLayout
        android:id="@+id/ques1"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_corners"
        android:clipToOutline="true"
        android:padding="10dp">

        <EditText
            android:id="@+id/q1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your First School Name"
            android:background="@null"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ques2"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_corners"
        android:clipToOutline="true"
        android:padding="10dp">

        <EditText
            android:id="@+id/q2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your Favorite Sport"
            android:background="@null"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ques3"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="390dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_corners"
        android:clipToOutline="true"
        android:padding="10dp">

        <EditText
            android:id="@+id/q3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Your Pet Name"
            android:background="@null"
            />
    </LinearLayout>
    <Button
        android:id="@+id/sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:backgroundTint="#EEEE"
        android:radius="20dp"
        android:text="Sign Up"
        android:textColor="@android:color/black"
        android:textSize="16sp"/>


</RelativeLayout>